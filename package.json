{
  "name": "webpack-demo",
  "version": "1.0.0",
  "private": "true",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all --parallel build:client build:server",
    "build:client": "PRODUCTION=true webpack --config webpack.config.js",
    "build:server": "webpack --config webpack.server.config.js",
    "build:profile": "PROFILER=true PRODUCTION=true webpack",
    "start": "SERVER_RENDER=true node dist/server/index.js",
    "start:client": "webpack-dev-server",
    "start:server": "SERVER_RENDER=true nodemon --config nodemon.json dist/server/server.js",
    "dev:iso": "SERVER_RENDER=true npm-run-all --parallel dev:iso:server dev:iso:client",
    "dev:iso:client": "yarn run build:client --watch",
    "dev:iso:server": "yarn run build:server --watch"
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.17",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.2",
    "html-webpack-plugin": "^5.2.0",
    "mini-css-extract-plugin": "^1.3.8",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "redux-devtools-extension": "^2.13.8",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "4.0.0-beta.0"
  }
}
